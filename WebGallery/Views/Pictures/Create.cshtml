@model WebGallery.Models.Picture

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Add New Picture</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="input-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="picture">
                    <label class="custom-file-label" for="inputGroupFile04">Choose picture</label>
                </div>
                <div class="input-group-append">
                    <button class="btn btn-info" type="button" id="submit" value="Create">Button</button>
                </div>
            </div>

        </form>

        <form asp-action="Create" id="submitPicture" hidden >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FileName" class="control-label"></label>
                <input asp-for="FileName" id="FileName" class="form-control" />
                <span asp-validation-for="FileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileSize" class="control-label"></label>
                <input asp-for="FileSize" id="FileSize" class="form-control" />
                <span asp-validation-for="FileSize" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="FilePath" class="control-label"></label>
                <input asp-for="FilePath" id="FilePath" class="form-control" />
                <span asp-validation-for="FilePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-info" style="margin-top:15px;">Back to List</a>
</div>


@section scripts{

    <script>

        //causes data to be sent to the server

            $("#submit").click(function () {

                let fi = document.getElementById('picture');

                if (fi.files.length > 0) {
                console.log(fi.files[0]);
                    $("#FileName").val(fi.files[0].name);
                    $("#FileSize").val(fi.files[0].size);
                    $("#submitPicture").submit();
                }
            
            })
       

    </script>
}



       